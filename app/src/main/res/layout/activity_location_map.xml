<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/surface">

    <!-- Google Map Fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Search Bar with Modern Design -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/search_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_search"
                app:tint="?attr/colorPrimary" />

            <EditText
                android:id="@+id/search_edittext"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Search location or room"
                android:background="@null"
                android:padding="0dp"
                android:textSize="16sp"
                android:imeOptions="actionSearch"
                android:maxLines="1" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_location"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_my_location"
                app:backgroundTint="?attr/colorPrimary"
                app:tint="@android:color/white"
                app:elevation="0dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Modern Bottom Sheet -->
    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!-- Bottom Sheet Handle -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bottom_sheet_handle" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@android:color/white"
            app:elevation="16dp">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Header Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Discover Places"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:fontFamily="sans-serif-medium" />

                        <ImageView
                            android:id="@+id/btn_settings"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_settings"
                            app:tint="?attr/colorPrimary" />
                    </LinearLayout>

                    <!-- Quick Actions Grid -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/quick_actions"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="sans-serif-medium" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:rowCount="2"
                        android:alignmentMode="alignMargins"
                        android:columnOrderPreserved="false"
                        android:layout_marginBottom="32dp">

                        <!-- Apartment Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/apartment_card"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="8dp"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="16dp"
                            app:strokeColor="?attr/colorOutline"
                            app:strokeWidth="1dp"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="16dp">

                                <ImageView
                                    android:id="@+id/apartment"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_apartment"
                                    app:tint="?attr/colorPrimary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/apartment"
                                    android:textSize="12sp"
                                    android:textColor="@android:color/black"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="sans-serif" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Add Room Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/addRoom_card"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="8dp"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="16dp"
                            app:strokeColor="?attr/colorOutline"
                            app:strokeWidth="1dp"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="16dp">

                                <ImageView
                                    android:id="@+id/addRoom"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_addd"
                                    app:tint="?attr/colorPrimary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/add_room"
                                    android:textSize="12sp"
                                    android:textColor="@android:color/black"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="sans-serif" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Language Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/language_card"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="8dp"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="16dp"
                            app:strokeColor="?attr/colorOutline"
                            app:strokeWidth="1dp"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="16dp">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_state"
                                    app:tint="?attr/colorPrimary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/language"
                                    android:textSize="12sp"
                                    android:textColor="@android:color/black"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="sans-serif" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </GridLayout>

                    <!-- Recent Searches Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/recent_searches"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="sans-serif-medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- UDSM Item -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            app:cardCornerRadius="12dp"
                            app:strokeColor="?attr/colorOutline"
                            app:strokeWidth="1dp"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_save"
                                    android:layout_marginEnd="16dp"
                                    app:tint="?attr/colorPrimary" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/udsm_main_campus"
                                        android:textSize="14sp"
                                        android:textColor="@android:color/black"
                                        android:fontFamily="sans-serif-medium" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/university_of_dar_es_salaam"
                                        android:textSize="12sp"
                                        android:textColor="@color/text_secondary"
                                        android:layout_marginTop="2sp" />
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_back"
                                    app:tint="@color/text_secondary" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Bus Office Item -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:strokeColor="?attr/colorOutline"
                            app:strokeWidth="1dp"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_bath"
                                    android:layout_marginEnd="16dp"
                                    app:tint="?attr/colorPrimary" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/ally_s_bus_office"
                                        android:textSize="14sp"
                                        android:textColor="@android:color/black"
                                        android:fontFamily="sans-serif-medium" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/bus_station_ticket_office"
                                        android:textSize="12sp"
                                        android:textColor="@color/text_secondary"
                                        android:layout_marginTop="2sp" />
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_close"
                                    app:tint="@color/text_secondary" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <!-- Language Selection (Hidden by default, shows on tap) -->
                    <LinearLayout
                        android:id="@+id/language_selection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="24dp"
                        android:visibility="gone">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_english"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="English"
                            android:layout_marginEnd="8dp"
                            app:chipBackgroundColor="@color/chip_background"
                            app:checkedIcon="@drawable/ic_room_available" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_swahili"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/swahili"
                            app:chipBackgroundColor="@color/chip_background"
                            app:checkedIcon="@drawable/ic_room_occupied" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>